<html>
    <body>
        <h1>Cadastro de livros</h1>

        <form action="/livros" method="post">
            <div if(data.livro.id)>
                <input type="hidden" id="id" name="id" value="${data.livro.id}" />
                <input type="hidden" name="_method" value="PUT" />            
            </div>

            <div>
                <label for="titulo">Titulo:</label>
                <input type="text" id="titulo" name="titulo" placeholder="Coloque o título" value="${data.livro.titulo}" />
            </div>
            <div>
                <label for="preco">Preço:</label>
                <input type="text" id="preco" name="preco" placeholder="00.00" value="${data.livro.preco}" />
            </div>
            <div>
                <label for="descricao">Descrição:</label>
                <textarea cols="20" rows="10"  id="descricao" name="descricao" placeholder="Fale sobre o livro">${data.livro.descricao}</textarea>
            </div>

            <input type="submit" value="Salvar" />
        </form>
    </body>
</html>